<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/subtract_button"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/buttonstyle"
            android:src="@drawable/subtract" />

        <ImageView
            android:id="@+id/speed_0"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/speed_element_1"/>

        <ImageView
            android:id="@+id/speed_1"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/speed_element_1"/>

        <ImageView
            android:id="@+id/speed_2"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/speed_element_1"/>

        <ImageView
            android:id="@+id/speed_3"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/speed_element_1"/>

        <ImageView
            android:id="@+id/speed_4"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/speed_element_1"/>

        <ImageView
            android:id="@+id/speed_5"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/speed_element_1"/>

        <ImageView
            android:id="@+id/speed_6"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/speed_element_1"/>

        <ImageView
            android:id="@+id/speed_7"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/speed_element_1"/>

        <ImageView
            android:id="@+id/speed_8"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/speed_element_1"/>

        <ImageView
            android:id="@+id/speed_9"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/speed_element_1"/>

        <ImageButton
            android:id="@+id/add_button"
            android:layout_width="38dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/buttonstyle"
            android:src="@drawable/add" />

    </LinearLayout>

    <TextView
        android:id="@+id/show_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/speed_text"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>